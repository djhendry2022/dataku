{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"declaration": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"jsx": "react-native",
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true
	},
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules",
		"test"
	]

}